<form class="new-comment" action="/comments" method="POST">
    <div class="form-group">
        <input type="text" id="text" name="text" placeholder="Comment">
    </div>
    <input type="hidden" id="post_id" name="post_id" value="<%= post.id %>">
    <!-- creates an input element with given value, passing it into the form without displaying it to the user -->
    <div class="form-group">
        <button class="button" type="submit">Submit</button>
    </div>
</form>